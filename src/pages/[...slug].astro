---
import { type CollectionEntry, getCollection, render } from "astro:content";
import WeekPost from "@/layouts/WeekPost.astro";

export async function getStaticPaths() {
  const posts = await getCollection("weeks");
  // Filter out week 0 - these pages should not be accessible
  const accessiblePosts = posts.filter((post) => post.data.week !== 0);
  return accessiblePosts.map((post) => ({
    params: { slug: post.id },
    props: post,
  }));
}
type Props = CollectionEntry<"weeks">;

const post = Astro.props;
const { Content } = await render(post);
---

<WeekPost {...post.data}>
  <Content />
  <script src="../scripts/page-animations.js"></script>
</WeekPost>

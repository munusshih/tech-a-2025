---
import { studentsSorted } from "@/data/students";

// Use the shared student data, already sorted alphabetically
const students = studentsSorted;
---

<section class="hall-of-fame">
  <h1 class="heading-1">Hall of Fame</h1>
  <div class="students-grid">
    {
      students.map((student, index) => (
        <div class="student-card" key={index}>
          <h3 class="student-name">
            {student.website ? (
              <a
                href={student.website}
                target="_blank"
                rel="noopener noreferrer"
              >
                {student.firstName} {student.lastName}
              </a>
            ) : (
              <span>
                {student.firstName} {student.lastName}
              </span>
            )}
          </h3>
          {student.website && (
            <div class="website-link">
              <a
                href={student.website}
                target="_blank"
                rel="noopener noreferrer"
              >
                Visit Website
              </a>
            </div>
          )}
        </div>
      ))
    }
  </div>
</section>
